<%- include('../partials/header') %>
    <%- include('../partials/sidebar') %>
        <div class="content-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="text-center">USER LIST</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th>Sr no.</th>
                                                <th>Name</th>
                                                <th>email</th>
                                                <th>phoneNumber</th>    
                                                <th>address</th>
                                                <th>city</th>
                                                <th>country</th>
                                                <th>documentType</th>
                                                <th>document</th>
                                                <th>poBox</th>
                                                <th>apartment</th>
                                                <th>suite</th>
                                                <th>province</th>
                                                <th>postalCode</th>
                                                <th>status</th>
                                                <th>delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(user.length> 0) {%>
                                                <% user.map((user1,i)=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= i+1 %>
                                                        </td>
                                                        <td>
                                                            <%= user1.fullName %>
                                                        </td>
                                                        <td>
                                                            <%= user1.phoneNumber %>
                                                        </td>
                                                        <td>
                                                            <%= user1.email %>
                                                        </td>
                                                        <td>
                                                            <%= user1.address %>
                                                        </td>
                                                        <td>
                                                            <%= user1.city %>
                                                        </td>
                                                        <td>
                                                            <%= user1.country %>
                                                        </td>
                                                        <td>
                                                            <%= user1.documentType %>
                                                        </td>
                                                    
                                                        <td>
                                                            <a href="/admin/showDocument/<%=user1._id %>">
                                                                show document
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <%= user1.poBox %>
                                                        </td>
                                                        <td>
                                                            <%= user1.apartment %>
                                                        </td>
                                                        <td>
                                                            <%= user1.suite %>
                                                        </td>

                                                        <td>
                                                            <%= user1.province %>
                                                        </td>
                                                         <td>
                                                            <%= user1.postalCode %>
                                                                </td>
                                                                <% if(user1.status=="Active") {%>
                                                                <td>
                                                                    <span>
                                                                        <a href="/admin/change-status/<%= user1._id %>/<%= user1.status %>"
                                                                            class="btn btn-success"
                                                                            data-toggle="tooltip">
                                                                            <%= user1.status %>
                                                                        </a>
                                                                    </span>
                                                                </td>
                                                                <% }
                                                                 else{ %>
                                                                    <td>
                                                                        <span>
                                                                            <a href="/admin/change-status/<%= user1._id %>/<%= user1.status %>"
                                                                                class="btn  btn-danger"
                                                                                data-toggle="tooltip">
                                                                                <%= user1.status %>
                                                                            </a>
                                                                        </span>
                                                                    </td>
                                                                  <% } %>
                                                                <td>
                                                                    <span>
                                                                        <a href="/admin/delete/<%= user1._id %>"
                                                                            data-toggle="tooltip" data-placement="top"
                                                                            title="Delete">
                                                                            <i
                                                                                class="fa fa-trash color-muted m-l-5 fa-2x"></i>
                                                                        </a>
                                                                    </span>
                                                                </td>
                                                    </tr>


                                                    <% }) %>
                                                        <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <%- include('../partials/footer') %>