<%- include('../partials/header') %> <%- include('../partials/sidebar') %>

<div class="content-body">
  <div class="row page-titles mx-0">
    <div class="col p-md-0">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="javascript:void(0)">Admin</a></li>
        <li class="breadcrumb-item active">
          <a href="javascript:void(0)">Change Password</a>
        </li>
      </ol>
    </div>
  </div>
  <!-- row -->

  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h4>Change Password</h4>

            <div class="form-validation">
              <% if(typeof errors !== 'undefined' && typeof errors.message !==
              'undefined') { %>
              <p class="alert alert-danger ml15 mr15 text-center">
                <%- errors.message %>
              </p>
              <% } %> <% if(typeof success !== 'undefined' && typeof
              success.message !== 'undefined') { %>
              <p class="alert alert-success ml15 mr15 text-center">
                <%- success.message %>
              </p>
              <% } %>

              <form
                class="form-valide"
                action="/admin/api/changepassword/<%= user.user_id %>"
                method="post"
              >
                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-username"
                    >Old Password<span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input
                      type="password"
                      class="form-control"
                      id="val-username"
                      value="<%= formdata['oldpassword'] %>"
                      name="oldpassword"
                      placeholder="Enter a old password"
                    />
                    <% if(typeof errors !== 'undefined' && typeof
                    errors.oldPassword !== 'undefined') { %>
                    <p class="error"><%- errors["oldpassword"] %></p>
                    <% } %>
                  </div>
                </div>

                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-phoneus"
                    >New Password <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input
                      type="password"
                      class="form-control"
                      id="val_phoneus"
                      name="newPassword"
                      value="<%= formdata['newPassword'] %>"
                      placeholder="New password"
                    />

                    <% if(typeof errors !== 'undefined' && typeof
                    errors.newPassword !== 'undefined') { %>
                    <p class="error"><%- errors["newPassword"] %></p>
                    <% } %>
                    <span id="message"></span>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-lg-4 col-form-label" for="val-phoneus"
                    >Confirm Password <span class="text-danger">*</span>
                  </label>
                  <div class="col-lg-6">
                    <input
                      type="password"
                      class="form-control"
                      id="val_phoneus1"
                      name="confirmPassword"
                      value="<%= formdata['confirmPassword'] %>"
                      placeholder="confirm password"
                    />

                    <% if(typeof errors !== 'undefined' && typeof
                    errors.confirmPassword !== 'undefined') { %>
                    <p class="error"><%- errors["confirmPassword"] %></p>
                    <% } %>
                    <span id="message"></span>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-lg-8 ml-auto">
                    <button type="submit" class="btn btn-primary">
                      Submit
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- #/ container -->
</div>
<%- include('../partials/footer') %>
